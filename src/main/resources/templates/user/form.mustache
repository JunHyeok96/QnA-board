{{>layout/header}}
<h1>회원 가입</h1>
<form method="post" action="/user/create">
  <div class="form-group">
    <label name="userId">사용자 아이디</label>
    <input type="text" class="form-control" name="userId" placeholder="아이디를 입력하세요."
           aria-describedby="emailHelp" required="required">
  </div>
  <div class="form-group">
    <label name="password">비밀번호</label>
    <input type="password" class="form-control" placeholder="비밀번호를 입력하세요" name="password"
           required="required">
  </div>
  <div class="form-group">
    <label name="name">이름</label>
    <input type="text" class="form-control" name="name" placeholder="이름을 입력하세요."
           aria-describedby="emailHelp" required="required">
  </div>
  <div class="form-group">
    <label name="email">이메일</label>
    <input type="text" class="form-control" name="email" placeholder="이메일을 입력하세요."
           aria-describedby="emailHelp" required="required">
  </div>
  <button type="submit" class="btn btn-primary" style="float: right">회원가입</button>
</form>
{{>layout/footer}}
