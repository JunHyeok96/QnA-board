{{>layout/header}}
<form>
  <div class="form-group">
    <label>제목</label>
    <input type="text" class="form-control" id="title" aria-describedby="titleInput" required
           value="{{post.title}}">
  </div>
  <div class="form-group">
    <label>내용</label>
    <textarea class="form-control" id="content" cols="30" style="resize:none;height:500px; "
              required>{{post.content}}</textarea>
  </div>
  <input type="hidden" id="id" value="{{post.id}}">
</form>
<button type="button" id="btn-update" class="btn btn-primary">확인</button>
{{>layout/footer}}