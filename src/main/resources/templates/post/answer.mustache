{{>layout/header}}

<form>
  <div class="form-group">
    <label>내용</label>
    <textarea class="form-control" id="content" cols="30" style="resize:none;height:500px; "
              required="true"></textarea>
  </div>
</form>
<input type="hidden" id="id" value="{{id}}"/>
<button type="button" id="btn-save" class="btn btn-primary">확인</button>

{{>layout/footer}}

<script>
  var click = true;
  var main = {
    init: function () {
      var _this = this;
      $('#btn-save').on('click', function () {
        if (click) {
          var content = $('#content').val()
          if(content.trim() === "" || content === null){
            alert("내용을 입력하세요!")
            return;
          }
          _this.save();
          click = !click;

          // 타이밍 추가
          setTimeout(function () {
            click = true;
          }, 2000)

        } else {
          alert("처리중 입니다!");
        }
      });
    },
    save: function () {
      var content = $('#content').val()
      if(content.trim() === "" || content === null){
        alert("내용을 입력하세요!")
        return;
      }
      var data = {
        content: $('#content').val(),
        questionId: $('#id').val(),
      };
      $.ajax({
        type: 'POST',
        url: '/api/v1/answers',
        dataType: 'text',
        contentType: 'application/json; charset=utf-8',
        data: JSON.stringify(data)
      }).done(function () {
        alert('글이 등록되었습니다.');
        window.location.href = '/questions/'+ $('#id').val();
      }).fail(function (error) {
        alert(error.responseText);
      });
    },
  }

  main.init();
</script>