{{>layout/header}}

<form>
  <div class="form-group">
    <label>제목</label>
    <input type="text" class="form-control" id="title" aria-describedby="titleInput"
           required="true">
  </div>
  <div class="form-group">
    <label>내용</label>
    <textarea class="form-control" id="summernote" name="content"
              placeholder="content" maxlength="140" rows="7"></textarea>
  </div>
</form>
<button type="button" id="btn-save" class="btn btn-primary">확인</button>

{{>layout/footer}}

<script>
  var click = true;
  document.getElementById('summernote').style.display = "block";
  var main = {
    init: function () {
      var _this = this;
      $('#btn-save').on('click', function () {
        if (click) {
          var title = $('#title').val()
          var content = $('#summernote').val()
          if (title.trim() === "" || title === null) {
            alert("제목을 입력하세요!")
            return;
          }
          if (content.trim() === "" || content === null) {
            alert("내용을 입력하세요!")
            return;
          }
          _this.save();
          click = !click;

          // 타이밍 추가
          setTimeout(function () {
            click = true;
          }, 2000)

        } else {
          alert("처리중 입니다!");
        }
      });
    },
    save: function () {
      var data = {
        title: $('#title').val(),
        content: $('#summernote').val(),
      };
      $.ajax({
        type: 'POST',
        url: '/api/v1/questions',
        dataType: 'text',
        contentType: 'application/json; charset=utf-8',
        data: JSON.stringify(data)
      }).done(function () {
        alert('글이 등록되었습니다.');
        window.location.href = '/';
      }).fail(function (error) {
        alert(error.responseText);
      });
    },
  }

  main.init();
</script>
<script>
  $(document).ready(function () {
    $('#summernote').summernote({
      height: 500,                 // 에디터 높이
      minHeight: 500,             // 최소 높이
      maxHeight: 500,             // 최대 높이
      focus: true,                  // 에디터 로딩후 포커스를 맞출지 여부
      lang: "ko-KR",					// 한글 설정
      placeholder: '내용을 입력해주세요.',	//placeholder 설정
      toolbar: [
        // [groupName, [list of button]]
        ['fontname', ['fontname']],
        ['fontsize', ['fontsize']],
        ['style', ['bold', 'italic', 'underline', 'strikethrough', 'clear']],
        ['color', ['forecolor', 'color']],
        ['table', ['table']],
        ['para', ['ul', 'ol', 'paragraph']],
        ['height', ['height']],
        ['insert', ['picture', 'link', 'video']],
        ['view', ['fullscreen', 'help']]
      ],
      fontNames: ['Arial', 'Arial Black', 'Comic Sans MS', 'Courier New', '맑은 고딕', '궁서', '굴림체',
        '굴림', '돋음체', '바탕체'],
      fontSizes: ['8', '9', '10', '11', '12', '14', '16', '18', '20', '22', '24', '28', '30', '36',
        '50', '72'],
      callbacks: {
        onImageUpload: function (files, editor, welEditable) {
          for (var i = 0; i < files.length; i++) {
            sendFile(files[i], this);
          }
        }
      }
    });
  });

  function sendFile(file, el) {
    var form_data = new FormData();
    form_data.append('data', file);
    $.ajax({
      data: form_data,
      type: "POST",
      url: '/upload',
      cache: false,
      contentType: false,
      enctype: 'multipart/form-data',
      processData: false,
      success: function (url) {
        $(el).summernote('insertImage', url);
      }
    });
  }
</script>
<script src="/js/summernote/summernote-lite.js"></script>
<script src="/js/summernote/lang/summernote-ko-KR.js"></script>
<link rel="stylesheet" href="/css/summernote/summernote-lite.css">
